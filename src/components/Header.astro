---
import Navigation from "./Navigation.astro";
import SearchBar from "./UI/SearchBar.astro";
---

<header
	class="fixed bg-onyx-900 w-full z-50 border-b-[1px] border-lime-500 px-9 py-5 flex items-center"
>
	<nav class="w-full flex items-center justify-between">
		<div class="flex items-center">
			<a class="flex items-center mr-9 max-sm:mr-0" href="/">
				<img
					class="w-[40px] h-[40px] rounded-full"
					src="/logo.webp"
					alt="logo"
				/>
				<span class="pl-3 font-bold text-2xl text-lime-400 leading-none"
					>Grandpa</span
				>
			</a>
			<Navigation />
		</div>
		<div class="flex items-center">
			<div class="flex gap-3">
				<SearchBar />
			</div>
		</div>
	</nav>
	<style>
		header {
			box-shadow: 0 2px 8px rgba(var(--black), 5%);
		}
	</style>
</header>
